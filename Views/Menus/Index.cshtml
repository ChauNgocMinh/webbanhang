@model IEnumerable<WebBanHang.Models.Menu>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h2>Danh sách Menu</h2>

    <p>
        <a class="btn btn-primary" asp-action="Create">Tạo menu mới</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Tên</th>
                <th scope="col">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
