@model IEnumerable<WebBanHang.Models.Product>

@{
    ViewData["Title"] = "Product Index";
}
<style>
    .back-link{
        padding: 10px;
        color: #515154;
        font-size: 13px;
    }
    .back-link a{
        margin: 0 5px;
        color: #515154;
    }


    .title {
        font-weight: 700;
        font-size: 25px;
        line-height: 45px;
        color: #1D1D1F;
        padding-top: 15px;
    }

    .item-box {
        padding: 0 10px;
        margin: 20px 0;
    }

    .item-box .product-item {
        background-color: white;
        padding-top: 10px;
        border-radius: 8px;
        box-shadow: 0px 1px 10px rgba(0, 0, 0, 0.04);
    }

    .item-box .product-item:hover {
        border-color: #02010100;
        box-shadow: 1px 1px 28px 0px rgb(0 0 0 / 12%);
    }

    .details {
        padding: 5px 14px 15px 14px;
    }

    .details a {
        font-weight: 600;
        min-height: 45px;
        font-size: 15px;
        color: #1D1D1F;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-decoration: none;
    }

    .details span {
        font-weight: 700;
        line-height: 24px;
    }

    .details .percent, .old-price {
        color: #86868B;
        margin: 0 5px 0 5px;
        font-size: 12px;
    }

    @@media (max-width: 767px) {
        .details .percent, .old-price {
            margin: 0;
            font-size: 10px;
        }
    }
</style>
<div class="back-link">
    <div class="container">
        <a asp-action="" asp-controller="Home">Trang chủ</a> > <a>@ViewBag.MenuName</a>
    </div>
</div>
<div style="background-color: #f5f5f7" class="pb-3">
    <div class="container">
        <h1 class="d-flex justify-content-center title">@ViewBag.MenuName</h1>
        <div class="row">
            @foreach (var item in Model.OrderByDescending(p => p.Created))
            {
                <div class="col-md-3 col-6 item-box">
                    <div class="product-item">
                        <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Products"><img style="width: 100%; height: auto" src="~/image/Product/@item.Image" alt="@item.Name" /></a>
                        <div class="details">
                            <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Products">@item.Name</a>
                            <div class="price">
                                <span style="color: #0066CC; font-size: 13px;">@item.Price.ToString("#,0")₫</span>
                                @if (item.OldPrice != null)
                                {
                                    double x = double.Parse(item.OldPrice?.ToString());
                                    double discountPercentage = (x - item.Price) / item.OldPrice.Value * 100;
                                    int discountPercentageInteger = Convert.ToInt32(discountPercentage);

                                    <span class="old-price" style="text-decoration: line-through;">@item.OldPrice?.ToString("#,0")₫</span>
                                    <span class="percent">@discountPercentageInteger%</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
      
    </div>
</div>
