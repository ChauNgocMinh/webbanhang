@model Tuple<List<WebBanHang.Models.Order>, List<List<WebBanHang.Models.OrderDetail>>>
@{
    string email = "";
}
<style>
    body {
        background-color: #f4f4f4;
        font-family: 'Arial', sans-serif;
        color: #333;
        margin: 0;
    }

    h1 {
        background-color: #3498db;
        color: #fff;
        padding: 20px;
        margin: 0;
    }

    .order-container {
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .order-header {
        background-color: #3498db;
        color: #fff;
        padding: 12px;
        border-radius: 5px 5px 0 0;
        font-weight: bold;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .product-details {
        width: 100%;
        margin-top: 20px;
    }

    .table {
        width: 100%;
        margin-bottom: 0;
        border-collapse: collapse;
    }

    .table th,
    .table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        background-color: #f2f2f2;
    }

    .table img {
        max-width: 80px;
        max-height: 80px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .order-container hr {
        margin: 20px 0;
        border: none;
        border-top: 1px solid #ddd;
    }

    .total-amount {
        text-align: right;
        font-weight: bold;
        font-size: 18px;
        margin-top: 20px;
    }
</style>

<h1>Danh sách đơn hàng</h1>

@foreach (var orderIndex in Enumerable.Range(0, Model.Item1.Count))
{
    <div class="order-container">
        <div class="order-header">
            @foreach (var detail in Model.Item2[orderIndex])
            {
                email = @detail.Email;
            }
            <div>
                <strong>Order ID:</strong> @Model.Item1[orderIndex].Id - @email
            </div>
            <div>
                <strong>Created:</strong> @Model.Item1[orderIndex].Created
            </div>
        </div>
        <div class="product-details">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Ảnh</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.Item2[orderIndex])
                    {
                        <tr>
                            <td>@detail.Product.Name</td>
                            <td>
                                <img src="~/image/Product/@detail.Product.Image" class="card-img-top" alt="@detail.Product.Name" />
                            </td>
                            <td>@detail.Qty</td>
                            <td>$@detail.ProductPrice</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="total-amount">
            <strong>Tổng tiền:</strong> $@Model.Item1[orderIndex].TotalAmount
        </div>
    </div>
    <hr />
}
