@section Scripts {
    <script>
        // Lấy tất cả các thẻ <img> có class "pic-show"
        const picShowImages = document.querySelectorAll('.pic-show');

        // Lặp qua từng thẻ và thêm sự kiện click
        picShowImages.forEach(img => {
            img.addEventListener('click', function () {
                // Lấy đường dẫn từ thuộc tính data-url
                const imageUrl = this.getAttribute('data-url');

                // Gán đường dẫn cho thẻ <img> chính
                document.querySelector('.main-pic').setAttribute('src', imageUrl);
            });
        });
    </script>
