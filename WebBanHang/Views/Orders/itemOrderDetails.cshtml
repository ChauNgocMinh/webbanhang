@model IEnumerable<WebBanHang.Models.OrderDetail>

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Giữ nguyên layout
}
<style>
    /* Tùy chỉnh nút chức năng */
    .btn-edit-sanpham {
        background-color: #ffc107; /* Màu nền của nút sửa */
        color: #212529; /* Màu chữ của nút sửa */
    }

    .btn-delete-sanpham {
        background-color: #dc3545; /* Màu nền của nút xóa */
        color: #fff; /* Màu chữ của nút xóa */
    }

    /* Tùy chỉnh ảnh đại diện trong table */
    .hinhdaidien {
        max-width: 50px; /* Đặt chiều rộng tối đa của ảnh là 50px */
        max-height: 50px; /* Đặt chiều cao tối đa của ảnh là 50px */
    }

    /* Tùy chỉnh background và văn bản của table header */
    .table th {
        background-color: #007bff; /* Màu nền của header */
        color: #fff; /* Màu chữ của header */
    }

    /* Tùy chỉnh background của table rows */
    .table tbody tr:nth-child(odd) {
        background-color: #f8f9fa; /* Màu nền của các hàng lẻ */
    }

    /* Tùy chỉnh background của table rows khi hover */
    .table tbody tr:hover {
        background-color: #e2e6ea; /* Màu nền khi hover */
    }

    /* Tùy chỉnh font-weight và kích thước font chữ của tổng cộng */
    .font-weight-bold {
        font-weight: bold;
        font-size: 18px;
    }

    /* Tùy chỉnh nút ở cuối trang */
    .text-center a.btn {
        margin-right: 10px; /* Khoảng cách giữa các nút */
    }

    /* Tùy chỉnh nút 'Quay về trang chủ' */
    .btn-warning {
        background-color: #ffc107; /* Màu nền của nút quay về trang chủ */
        color: #212529; /* Màu chữ của nút quay về trang chủ */
    }

    /* Tùy chỉnh nút 'Thanh toán' */
    .btn-primary {
        background-color: #007bff; /* Màu nền của nút thanh toán */
        color: #fff; /* Màu chữ của nút thanh toán */
    }
</style>
@if (Model != null)
{
    <div class="container mt-4">
        <h1 class="text-center">Giỏ hàng</h1>
        <div class="row">
            <div class="col col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/image/Product/@item.Product.Image" alt="@item.Product.Image" class="hinhdaidien">
                                </td>
                                <td>@item.Product.Name</td>
                                <td class="text-right">@item.Qty</td>
                                <td class="text-right"> $@item.ProductPrice</td>
                                <td class="text-right"> $@((item.Qty * item.ProductPrice))</td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="row mt-3">
                    <div class="col-md-12 text-right">
                        @{
                            var total = Model.Sum(item => item.Qty * item.ProductPrice);
                        }
                        <div class="font-weight-bold">Total: @total</div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-12 text-center">
                        <a href=/ class="btn btn-warning btn-md"><i class="fa fa-arrow-left" aria-hidden="true"></i>&nbsp;Quay về trang chủ</a>
                        <a asp-action="Create" asp-controller="Orders" class="btn btn-primary btn-md"><i class="fa fa-shopping-cart" aria-hidden="true"></i>&nbsp;Thanh toán</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1>
        <i>Bạn chưa có sản phẩm nào trong giỏ hàng</i>
    </h1>
}