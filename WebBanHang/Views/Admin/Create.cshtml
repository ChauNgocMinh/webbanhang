@model WebBanHang.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = "Create User";
}

<style>
    .register-form {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px #000000;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-register {
        width: 100%;
    }
</style>

<div class="container" style="padding-top: 20px; padding-bottom: 20px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="register-form">
                <h2 class="text-center mb-4">Tạo người dùng mới</h2>

                <form asp-action="Create" method="post">
                    <span asp-validation-summary="All" class="text-danger" role="alert"></span>

                    <div class="form-group">
                        <label asp-for="LastName" class="form-label">Họ</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FirstName" class="form-label">Tên</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserName" class="form-label">Tên Tài Khoản</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Mật khẩu</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Role" class="form-label">Vai trò</label>
                        <select asp-for="Role" asp-items="ViewBag.Roles" class="form-select" aria-required="true">
                            <option disabled selected>Chọn Vai trò</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary btn-register">Đăng Ký</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
