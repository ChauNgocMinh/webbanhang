@using WebBanHang.ViewModels
@model UserWithRoleVM

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit User Roles</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="UserId">User ID:</label>
        <input asp-for="UserId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Roles">Roles:</label>
        <select asp-for="Roles" asp-items="@(new SelectList(ViewBag.RoleList))" class=" form-select" aria-required="true">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update Roles</button>
</form>

