@using Microsoft.AspNetCore.Identity
@using WebBanHang.Areas.Identity.Data

@inject SignInManager<WebBanHangUser> SignInManager
@inject UserManager<WebBanHangUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanHang</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebBanHang.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Arial">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<style>

    .navbar{
        padding: 0;
        background-color: #515154;

    }

    .navbar-nav .nav-item {
        margin-right: 10px;
    }

    .navbar-nav .nav-link {
        padding: 20px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease; 
        color: #fff !important;
    }

    .navbar-nav .nav-link:hover {
        background-color: #626265 !important; /* Change to desired hover color */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hiệu ứng box-shadow khi hover */
        
    }

    /* Custom styles for user dropdown */
    .user-dropdown {
        position: relative;
    }

    /* .user-dropdown-toggle::after {
        content: '\25BC';
        display: inline-block;
        margin-left: 5px;
        vertical-align: middle;
    } */

    .user-dropdown-menu {
        position: absolute;
        right: 0;
        top: 100%;
        min-width: 200px;
        z-index: 1000;
        display: none;
        float: left;
        padding: 10px;
        font-size: 1rem;
        text-align: left;
        list-style: none;
        background-color: #fff;
        border: 1px solid #ccc;
        border: 1px solid rgba(0, 0, 0, 0.15);
        border-radius: 0.25rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.175);
        transition: opacity 0.3s ease, transform 0.3s ease; /* Thêm hiệu ứng transition */
        opacity: 0; /* Ẩn menu ban đầu */
        transform: translateY(-10px); /* Dịch chuyển lên trên ban đầu */
    }

    .user-dropdown:hover .user-dropdown-menu {
        display: block;
        opacity: 1; /* Hiển thị menu khi hover */
        transform: translateY(0); /* Dịch chuyển xuống dưới khi hover */
    }

    .user-dropdown-item {
        display: block;
        padding: 8px 20px;
        clear: both;
        font-weight: normal;
        line-height: 1.5;
        color: #212529;
        white-space: nowrap;
        transition: background-color 0.3s ease; /* Thêm hiệu ứng transition */
        text-decoration: none;
    }

    /* .user-dropdown-item .dropdown-menu-link{
        color: black !important;
     */}

    .user-dropdown-item:hover {        
        background-color: #f8f9fa;
        color: #0d6efd !important;
    }

    .user-dropdown-item button {
        background: none;
        border: none;
        padding: 0;
        margin: 0;
        cursor: pointer;
        
    }

    .user-dropdown-item button:hover {
        text-decoration: none;
    }

    .collapseShow {
        display: none;
    }
    @@media(max-width: 992px){
        .collapseShow {
            display: block;
        }

        .navbar-nav .nav-link {
            padding: 19px;
        }
    }
    
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Web bán hàng</a>
               
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menus" asp-action="Index">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menus" asp-action="Index">iPhone</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menus" asp-action="Index">IPad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menus" asp-action="Index">Mac</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menus" asp-action="Index">Watch</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (this.User.IsInRole("Quản lý"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Phân quyền</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Menus" asp-action="Index">Menu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Sản phẩm</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="ManageOrder">Đơn hàng</a>
                                </li>
                                @* <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Role" asp-action="Index">Role</a>
                                </li> *@
                            }
                           
                            @if (this.User.IsInRole("Khách Hàng"))
                            {
                          
                            }
                        }
                        else
                        {
                           
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (this.User.IsInRole("Khách Hàng"))
                            {
                                <li class="">
                                    <a style="text-decoration: none; color: #212529;" class="nav-link" asp-area="" asp-controller="OrderDetails" asp-action="Index">
                                        <i style="color: white" class="fa-solid fa-cart-shopping"></i>
                                    </a>
                                </li>
                                <li class="nav-item user-dropdown">
                                    <a id="manage" class="nav-link user-dropdown-toggle" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                        @* Hello @UserManager.GetUserName(User)! *@
                                        <i class="fa-regular fa-user"></i>
                                    </a>
                                    <ul class="user-dropdown-menu">
                                        <li class="user-dropdown-item">
                                            <a style="text-decoration: none; color: #212529;" asp-area="Identity" asp-page="/Account/Manage/Index">Thông tin cá nhân</a>
                                        </li>
                                        
                                        <li class="user-dropdown-item">
                                            <a style="text-decoration: none; color: #212529;" asp-area="" asp-controller="Orders" asp-action="Index">Đơn đã đặt</a>
                                        </li>
                                        <li class="user-dropdown-item">
                                            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Customer", new { area = "" })">
                                                <button id="logout" type="submit" class="btn btn-link user-dropdown-item">Logout</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item user-dropdown">
                                    <a id="manage" class="nav-link user-dropdown-toggle" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                        @* Hello @UserManager.GetUserName(User)! *@
                                        <i class="fa-regular fa-user"></i>
                                    </a>
                                    <ul class="user-dropdown-menu">
                                        <li class="user-dropdown-item">
                                            <a style="text-decoration: none; color: #212529;" asp-area="Identity" asp-page="/Account/Manage/Index">Thông tin cá nhân</a>
                                        </li>
                                        <li class="user-dropdown-item">
                                            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Customer", new { area = "" })">
                                                <button id="logout" type="submit" class="btn btn-link user-dropdown-item">Logout</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="">
                                <a style="text-decoration: none; color: #212529;" class="nav-link" asp-area="" asp-controller="OrderDetails" asp-action="Index">
                                    <i style="color: white" class="fa-solid fa-cart-shopping"></i>
                                </a>
                            </li>
                            <li class="nav-item user-dropdown">
                                <a id="manage" class="nav-link user-dropdown-toggle">
                                    @* Hello @UserManager.GetUserName(User)! *@
                                    <i style="color: white" class="fa-regular fa-user"></i>
                                </a>
                                <ul class="user-dropdown-menu">
                                    <li class="user-dropdown-item">
                                        <a style="text-decoration: none; color: #212529;" id="register" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
                                    </li>
                                    <li class="user-dropdown-item">
                                        <a style="text-decoration: none; color: #212529;" id="login" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
                <div class="collapseShow">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link">
                                <i class="fa-solid fa-bars"></i>
                            </a>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>


    <main style="margin: 64px 0 60px 0;" role="main" class="pb-3">
            @RenderBody()
    </main>
   

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2023 - WebBanHang - <a asp-area="" asp-controller="Customer" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
