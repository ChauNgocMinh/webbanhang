@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanHang</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebBanHang.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Arial">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<style>

    .navbar{
        padding: 0;
        background-color: #515154;
    }

    .navbar-nav .nav-item {
        margin-right: 10px;
    }

    .navbar-nav .nav-link {
        padding: 17px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease; 
        color: #d2d2d7 !important;
    }
    .navbar-nav .nav-link:hover{
        color: #fff !important;
    }

    .navbar-nav .nav-link:hover {
        background-color: #626265 !important; /* Change to desired hover color */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hiệu ứng box-shadow khi hover */
        
    }

    /* Custom styles for user dropdown */
    .user-dropdown {
        position: relative;
    }

    /* .user-dropdown-toggle::after {
        content: '\25BC';
        display: inline-block;
        margin-left: 5px;
        vertical-align: middle;
    } */

    .user-dropdown-menu {
        position: absolute;
        right: 0;
        top: 100%;
        min-width: 200px;
        z-index: 1000;
        display: none;
        float: left;
        padding: 10px;
        font-size: 1rem;
        text-align: left;
        list-style: none;
        background-color: #fff;
        border: 1px solid #ccc;
        border: 1px solid rgba(0, 0, 0, 0.15);
        border-radius: 0.25rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.175);
        transition: opacity 0.3s ease, transform 0.3s ease; /* Thêm hiệu ứng transition */
        opacity: 0; /* Ẩn menu ban đầu */
        transform: translateY(-10px); /* Dịch chuyển lên trên ban đầu */
    }

    .user-dropdown:hover .user-dropdown-menu {
        display: block;
        opacity: 1; /* Hiển thị menu khi hover */
        transform: translateY(0); /* Dịch chuyển xuống dưới khi hover */
    }

    .user-dropdown-item {
        display: block;
        padding: 8px 20px;
        clear: both;
        font-weight: normal;
        line-height: 1.5;
        color: #212529;
        white-space: nowrap;
        transition: background-color 0.3s ease; /* Thêm hiệu ứng transition */
        text-decoration: none;
    }

    /* .user-dropdown-item .dropdown-menu-link{
        color: black !important;
     */}

    .user-dropdown-item:hover {        
        background-color: #f8f9fa;
        color: #0d6efd !important;
    }

    .user-dropdown-item button {
        background: none;
        border: none;
        padding: 0;
        margin: 0;
        cursor: pointer;
        
    }

    .user-dropdown-item button:hover {
        text-decoration: none;
    }

    .collapseShow {
        display: none;
    }
    
    @@media(max-width: 992px){
        .collapseShow {
            display: block;
        }

        .navbar-nav .nav-link {
            padding: 17px;
        }
    }

    
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container">
                <div class="collapseShow">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link">
                                <i class="fa-solid fa-bars"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Web bán hàng</a>
               
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menus" asp-action="Index">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menus" asp-action="Index">iPhone</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menus" asp-action="Index">IPad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menus" asp-action="Index">Mac</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Menus" asp-action="Index">Watch</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Âm thanh</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Phụ kiện</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Tin tức</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Dịch vụ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Khuyến mãi</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (this.User.IsInRole("Khách Hàng"))
                            {
                                <li class="">
                                    <a style="text-decoration: none; color: #212529;" onclick="getShoppingCart()" role="button">
                                        <i style="color: white" class="fa-solid fa-cart-shopping"></i>
                                    </a>
                                </li>
                                <li class="nav-item user-dropdown">
                                    <a id="manage" class="nav-link user-dropdown-toggle" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                        @* Hello @UserManager.GetUserName(User)! *@
                                        <i class="fa-regular fa-user"></i>
                                    </a>
                                    <ul class="user-dropdown-menu">
                                        <li class="user-dropdown-item">
                                            <a style="text-decoration: none; color: #212529;" asp-area="Identity" asp-page="/Account/Manage/Index">Thông tin cá nhân</a>
                                        </li>
                                        
                                        <li class="user-dropdown-item">
                                            <a style="text-decoration: none; color: #212529;" asp-area="" asp-controller="Orders" asp-action="Index">Đơn đã đặt</a>
                                        </li>
                                        <li class="user-dropdown-item">
                                            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Customer", new { area = "" })">
                                                <button id="logout" type="submit" class="btn btn-link user-dropdown-item">Logout</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item user-dropdown">
                                    <a id="manage" class="nav-link user-dropdown-toggle" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                        @* Hello @UserManager.GetUserName(User)! *@
                                        <i class="fa-regular fa-user"></i>
                                    </a>
                                    <ul class="user-dropdown-menu">
                                        <li class="user-dropdown-item">
                                            <a style="text-decoration: none; color: #212529;" asp-area="Identity" asp-page="/Account/Manage/Index">Thông tin cá nhân</a>
                                        </li>
                                        <li class="user-dropdown-item">
                                            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Customer", new { area = "" })">
                                                <button id="logout" type="submit" class="btn btn-link user-dropdown-item">Logout</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="">
                                <a style="text-decoration: none; color: #212529;" class="nav-link" onclick="getShoppingCart()" role="button">
                                    <i style="color: white" class="fa-solid fa-cart-shopping"></i>
                                </a>
                            </li>
                            <li class="nav-item user-dropdown">
                                <a id="manage" class="nav-link user-dropdown-toggle">
                                    @* Hello @UserManager.GetUserName(User)! *@
                                    <i style="color: white" class="fa-regular fa-user"></i>
                                </a>
                                <ul class="user-dropdown-menu">
                                    <li class="user-dropdown-item">
                                        <a style="text-decoration: none; color: #212529;" id="register" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
                                    </li>
                                    <li class="user-dropdown-item">
                                        <a style="text-decoration: none; color: #212529;" id="login" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>

                <div class="collapseShow">
                    <ul class="navbar-nav">
                        <li class="">
                            <a style="text-decoration: none; color: #212529;" class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i style="color: white; font-size: 17px" class="fa-solid fa-cart-shopping"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <main style="margin: 57px 0 0 0;" role="main">
            @RenderBody()
    </main>
   
    
    <div class="">
        <footer class="text-center text-lg-start text-white"
                style="background-color: #1c2331">
            <section class="d-flex justify-content-between p-4"
                     style="background-color: #6351ce">
                <div class="me-5">
                    <span>Liên hệ với chúng tôi:</span>
                </div>
                <div>
                    <a href="" class="text-white me-4">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="" class="text-white me-4">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="" class="text-white me-4">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="" class="text-white me-4">
                        <i class="fab fa-linkedin"></i>
                    </a>
                </div>
            </section>
            <section class="">
                <div class="container text-center text-md-start mt-5">
                    <div class="row mt-3">
                        <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                            <h6 class="text-uppercase fw-bold">Company name</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: #7c4dff; height: 2px" />
                            <p>
                                Here you can use rows and columns to organize your footer
                                content. Lorem ipsum dolor sit amet, consectetur adipisicing
                                elit.
                            </p>
                        </div>
                        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                            <h6 class="text-uppercase fw-bold">Products</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: #7c4dff; height: 2px" />
                            <p>
                                <a href="#!" class="text-white">MDBootstrap</a>
                            </p>
                            <p>
                                <a href="#!" class="text-white">MDWordPress</a>
                            </p>
                            <p>
                                <a href="#!" class="text-white">BrandFlow</a>
                            </p>
                            <p>
                                <a href="#!" class="text-white">Bootstrap Angular</a>
                            </p>
                        </div>
                        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                            <h6 class="text-uppercase fw-bold">Useful links</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: #7c4dff; height: 2px" />
                            <p>
                                <a href="#!" class="text-white">Your Account</a>
                            </p>
                            <p>
                                <a href="#!" class="text-white">Become an Affiliate</a>
                            </p>
                            <p>
                                <a href="#!" class="text-white">Shipping Rates</a>
                            </p>
                            <p>
                                <a href="#!" class="text-white">Help</a>
                            </p>
                        </div>
                        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                            <h6 class="text-uppercase fw-bold">Contact</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: #7c4dff; height: 2px" />
                            <p><i class="fas fa-home mr-3"></i> New York, NY 10012, US</p>
                            <p><i class="fas fa-envelope mr-3"></i> info@example.com</p>
                            <p><i class="fas fa-phone mr-3"></i> + 01 234 567 88</p>
                            <p><i class="fas fa-print mr-3"></i> + 01 234 567 89</p>
                        </div>
                    </div>
                </div>
            </section>
            <div class="text-center p-3"
                 style="background-color: rgba(0, 0, 0, 0.2)">
                Since:
                <a class="text-white" >2024</a>
            </div>
        </footer>
    </div>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
