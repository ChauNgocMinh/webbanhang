<style>

    .navbar{
        padding: 0;
        background-color: #515154;
    }

    .navbar-nav .nav-item {
        margin-right: 10px;
    }

    .navbar-nav .nav-link {
        padding: 17px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease; 
        color: #d2d2d7 !important;
    }
    .navbar-nav .nav-link:hover{
        color: #fff !important;
    }

    .navbar-nav .nav-link:hover {
        background-color: #626265 !important; /* Change to desired hover color */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hiệu ứng box-shadow khi hover */
        
    }

    /* Custom styles for user dropdown */
    .user-dropdown {
        position: relative;
    }

    /* .user-dropdown-toggle::after {
        content: '\25BC';
        display: inline-block;
        margin-left: 5px;
        vertical-align: middle;
    } */

    .user-dropdown-menu {
        position: absolute;
        right: 0;
        top: 100%;
        min-width: 200px;
        z-index: 1000;
        display: none;
        float: left;
        padding: 10px;
        font-size: 1rem;
        text-align: left;
        list-style: none;
        background-color: #fff;
        border: 1px solid #ccc;
        border: 1px solid rgba(0, 0, 0, 0.15);
        border-radius: 0.25rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.175);
        transition: opacity 0.3s ease, transform 0.3s ease; /* Thêm hiệu ứng transition */
        opacity: 0; /* Ẩn menu ban đầu */
        transform: translateY(-10px); /* Dịch chuyển lên trên ban đầu */
    }

    .user-dropdown:hover .user-dropdown-menu {
        display: block;
        opacity: 1; /* Hiển thị menu khi hover */
        transform: translateY(0); /* Dịch chuyển xuống dưới khi hover */
    }

    .user-dropdown-item {
        display: block;
        padding: 8px 20px;
        clear: both;
        font-weight: normal;
        line-height: 1.5;
        color: #212529;
        white-space: nowrap;
        transition: background-color 0.3s ease; /* Thêm hiệu ứng transition */
        text-decoration: none;
    }

    /* .user-dropdown-item .dropdown-menu-link{
        color: black !important;
     */}

    .user-dropdown-item:hover {        
        background-color: #f8f9fa;
        color: #0d6efd !important;
    }

    .user-dropdown-item button {
        background: none;
        border: none;
        padding: 0;
        margin: 0;
        cursor: pointer;
        
    }

    .user-dropdown-item button:hover {
        text-decoration: none;
    }

    .collapseShow {
        display: none;
    }

    #dropdownMenu {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.5s ease-in-out;
        display: none;
    }

    .navbar-nav .nav-item {
        margin: 0;
    }
    @@media(max-width: 992px){
        .collapseShow {
            display: block;
        }

        .navbar-nav .nav-link {
            padding: 17px;
        }

        #dropdownMenu{
            display: block;
        }
    }

    #back-to-top-btn {
        display: none;
        position: fixed;
        bottom: 50px;
        right: 20px;
        background-color: #515154;
        color: #ffffff;
        padding: 10px;
        border: none;
        border-radius: 50%; /* Tạo hình tròn */
        cursor: pointer;
        height: 50px;
        width: 50px;
    }

    #back-to-top-btn.active {
        display: block;
    }

    #back-to-top-btn i {
        font-size: 20px; /* Kích thước của mũi tên */
    }
</style>
